@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">

    <div class="carousel-inner" role="listbox">
        <div class="item active imageContainer">
            <img src="~/images/internet2.jpg" alt="ASP.NET" class="img-responsive" style="width: 1140px; height:326px;" />
            <div class="content" role="option">
                <h1>Witaj na LinksAggregator.com,</h1>
                <p>stronie, gdzie możesz znaleźć najciekawsze linki udostępniane przez innych użytkowników z całego świata.</p>
            </div>
        </div>
        <div class="item imageContainer">
            <img src="~/images/internet1.png" alt="Visual Studio" class="img-responsive" style="width: 1140px; height:326px;"/>
            <div class="content" role="option">
                <h1>Załóż konto już teraz,</h1>
                <p>a będziesz mógł dodawać nieograniczoną liczbę linków oraz oceniać inne!</p>
            </div>
        </div>
        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="sr-only">Next</span>
    </a>
</div>

